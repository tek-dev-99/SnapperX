{
  "name": "vScreenshotApp",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "electron/main.cjs",
  "description": "A desktop screenshot editor app",
  "license": "MIT",
  "author": "ScreenshotApp",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm run dev\" \"npm run electron:start\"",
    "electron:prod": " npm run build && wait-on http://localhost:5173 && electron .",
    "electron:start": "electron .",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "package-mac": "electron-packager . ScreenshotApp --platform=darwin --arch=x64 --overwrite",
    "package-linux": "electron-packager . ScreenshotApp --platform=linux --arch=x64 --overwrite",
    "package-win": "electron-packager . ScreenshotApp --platform=win32 --arch=x64 --overwrite",
    "electron-builder": "electron-builder"
  },
  "dependencies": {
    "concurrently": "^9.2.0",
    "electron-squirrel-startup": "^1.0.1",
    "electron-store": "^10.1.0",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.1",
    "lucide-react": "^0.344.0",
    "node-screenshots": "^0.2.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "wait-on": "^7.2.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.1",
    "@electron-forge/maker-deb": "^7.8.1",
    "@electron-forge/maker-rpm": "^7.8.1",
    "@electron-forge/maker-squirrel": "^7.8.1",
    "@electron-forge/maker-zip": "^7.8.1",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.1",
    "@electron-forge/plugin-fuses": "^7.8.1",
    "@electron/fuses": "^1.8.0",
    "@eslint/js": "^9.9.1",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "electron": "^37.2.3",
    "electron-builder": "^26.0.12",
    "electron-installer-dmg": "^5.0.1",
    "electron-packager": "^17.1.2",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.2"
  }
}
